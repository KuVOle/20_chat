</head>
<body>
    <div class="container">
        <%if(status == 'err'){%>
            <h3 class="text-danger">Error chenge password</h3>
        <%}%>
        <%if(status == 'success'){%>
            <h3 class="text-success">Restore password</h3>
            <form method="post">
                <div class="py-2">
                    <label class="form-label">New password</label>
                    <input type="text" class="form-control" name="password" placeholder="new password">
                    <button class="btn btn-success">Change Password</button>
                </div>
            </form>
            <%if(badPassword == 'badPassword'){%>
                <p class="text-danger">Min lenght password 8 symbols</p>
            <%}%>
        <%}%>
        
       <hr>
        <a href="/login" class="btn btn-primary">Login</a>

    </div>
</body>
</html>